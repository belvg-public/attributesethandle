<?xml version="1.0"?>
<config>
    <modules>
        <Belvg_AttributeTypeHandle>
            <version>1.0.0</version>
        </Belvg_AttributeTypeHandle>
    </modules>
    <global>
        <helpers>
            <belvg_attributetypehandle>
                <class>Belvg_AttributeTypeHandle_Helper</class>
            </belvg_attributetypehandle>
        </helpers>
        <models>
            <belvg_attributetypehandle>
                <class>Belvg_AttributeTypeHandle_Model</class>
            </belvg_attributetypehandle>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <belvg_attributetypehandle>
                        <class>belvg_attributetypehandle/observer</class>
                        <method>addAttributeSetHandle</method>
                    </belvg_attributetypehandle>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </frontend>
</config>